

<div class="card">
  <h5 class="card-header">Appointment details</h5>
  <div class="card-body">
    <p>
  <strong>Name:</strong>
  <%= @appointment.name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @appointment.age %>
</p>

<p>
  <strong>Disease:</strong>
  <%= @appointment.disease %>
</p>

<p>
  <strong>Date:</strong>
  <%= @appointment.day %>
</p>

<p>
  <strong>Time:</strong>
  <%= @appointment.time.strftime("%I:%M") %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @appointment.phone %>
</p>
<p>
  <strong>Gender:</strong>
  <%= @appointment.gender %>
</p>
<p>
  <strong>status:</strong>
  <%= @appointment.status %>
</p>

<div class="btn-group" role="group" aria-label="Basic example">
<%= link_to 'edit', edit_appointment_path, class:"btn btn-secondary" %>
<%= link_to 'Back', appointments_path, class:"btn btn-secondary" %>

  </div>
</div>




